generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Usuario {
  id       String @id @default(uuid())
  usuario  String @unique
  password String
  rol      Rol
  padre    Padre?
  alumno   Alumno?
  docente  Docente?
  administrativo Administrativo?
}

enum Rol {
  PADRE
  ALUMNO
  DOCENTE
  ADMINISTRATIVO
}

model Padre {
  id                String    @id @default(uuid()) @unique
  usuario           Usuario   @relation(fields: [id], references: [id])
  nombre            String
  apellido          String
  direccion         String
  numeroTelefono    String
  correoElectronico String    @unique
  hijos             Alumno[]  @relation("PadreHijos")
}

model Alumno {
  id                String   @id @default(uuid()) @unique
  usuario           Usuario  @relation(fields: [id], references: [id])
  nombre            String
  apellido          String
  fechaNacimiento   DateTime
  numeroMatricula   String   @unique
  direccion         String
  telefono          String
  correoElectronico String   @unique
  materias          Materia[] @relation("AlumnoMateria")
  padre             Padre?   @relation("PadreHijos", fields: [padreId], references: [id])
  padreId           String? 
  curso             Curso    @relation(fields: [cursoId], references: [id])
  cursoId           String
}

model Docente {
  id                String   @id @default(uuid()) @unique
  usuario           Usuario  @relation(fields: [id], references: [id])
  nombre            String
  apellido          String
  direccion         String
  matricula         String   @unique
  numeroTelefono    String
  correoElectronico String   @unique
  cursos            Curso[]  @relation("DocenteCurso")
  materia           Materia?  @relation(fields: [materiaId], references: [id], name: "DocenteMateria")
  materiaId         String?  
}

model Administrativo {
  id                String   @id @default(uuid()) @unique
  usuario           Usuario  @relation(fields: [id], references: [id])
  nombre            String
  apellido          String
  direccion         String
  numeroTelefono    String
  correoElectronico String   @unique
}

model Materia {
  id        String   @id @default(uuid())
  nombre    String
  docente   Docente @relation("DocenteMateria")
  cursos    Curso[]  @relation("MateriaCurso")
  alumnos   Alumno[] @relation("AlumnoMateria")
}

model Curso {
  id        String   @id @default(uuid())
  nombre    String
  materias  Materia[] @relation("MateriaCurso")
  docentes  Docente[] @relation("DocenteCurso")
}